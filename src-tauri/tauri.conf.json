{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn start",
    "devPath": "http://localhost:4200",
    "distDir": "../dist/oyasumi",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "oyasumi",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "readFile": true
      },
      "shell": {
        "execute": true,
        "open": true
      },
      "dialog": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "co.raphii.oyasumi",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 540,
        "resizable": true,
        "title": "Oyasumi",
        "width": 960,
        "minWidth": 960,
        "minHeight": 540,
        "visible": false,
        "center": true,
        "theme": "Dark",
        "transparent": true
      },
      {
        "width": 400,
        "height": 200,
        "decorations": false,
        "url": "assets/splashscreen/splashscreen.html",
        "label": "splashscreen",
        "resizable": false,
        "center": true,
        "theme": "Dark",
        "transparent": true
      }
    ]
  }
}
