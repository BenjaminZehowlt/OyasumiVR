{
  "action_manifest_version": 1,
  "controller_type": "vive_controller",
  "description": "OyasumiVR's default bindings for Vive controllers",
  "name": "OyasumiVR Default Bindings",
  "bindings": {
    "/actions/main": {
      "sources": [
        {
          "path": "/user/hand/right/input/application_menu",
          "mode": "button",
          "inputs": {
            "double": {
              "output": "/actions/main/in/openoverlay"
            }
          }
        },
        {
          "path": "/user/hand/left/input/application_menu",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/main/in/mutemicrophone"
            }
          }
        }
      ]
    },
    "/actions/hidden": {
      "sources": [
        {
          "path": "/user/hand/right/input/trigger",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/overlayinteract"
            }
          }
        },
        {
          "path": "/user/hand/left/input/trigger",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/overlayinteract"
            }
          }
        },
        {
          "path": "/user/hand/right/input/application_menu",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/indicatepresence"
            }
          }
        },
        {
          "path": "/user/hand/left/input/application_menu",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/indicatepresence"
            }
          }
        },
        {
          "path": "/user/hand/left/input/trackpad",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/indicatepresence"
            }
          }
        },
        {
          "path": "/user/hand/right/input/trackpad",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/indicatepresence"
            }
          }
        },
        {
          "path": "/user/hand/right/input/trigger",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/indicatepresence"
            }
          }
        },
        {
          "path": "/user/hand/left/input/trigger",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/indicatepresence"
            }
          }
        }
      ]
    }
  }
}
