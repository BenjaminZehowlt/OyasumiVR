{
  "action_manifest_version": 1,
  "controller_type": "oculus_touch",
  "description": "OyasumiVR's default bindings for Oculus controllers",
  "name": "OyasumiVR Default Bindings",
  "bindings": {
    "/actions/main": {
      "sources": [
        {
          "path": "/user/hand/right/input/a",
          "mode": "button",
          "inputs": {
            "double": {
              "output": "/actions/main/in/openoverlay"
            }
          }
        },
        {
          "path": "/user/hand/left/input/x",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/main/in/mutemicrophone"
            }
          }
        }
      ]
    },
    "/actions/hidden": {
      "sources": [
        {
          "path": "/user/hand/right/input/a",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/sleepcheckdecline"
            }
          }
        },
        {
          "path": "/user/hand/left/input/x",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/sleepcheckdecline"
            }
          }
        },
        {
          "path": "/user/hand/right/input/b",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/sleepcheckdecline"
            }
          }
        },
        {
          "path": "/user/hand/left/input/y",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/sleepcheckdecline"
            }
          }
        },
        {
          "path": "/user/hand/left/input/joystick",
          "mode": "joystick",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/sleepcheckdecline"
            }
          }
        },
        {
          "path": "/user/hand/right/input/joystick",
          "mode": "joystick",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/sleepcheckdecline"
            }
          }
        },
        {
          "path": "/user/hand/right/input/trigger",
          "mode": "trigger",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/sleepcheckdecline"
            }
          }
        },
        {
          "path": "/user/hand/left/input/trigger",
          "mode": "trigger",
          "inputs": {
            "click": {
              "output": "/actions/hidden/in/sleepcheckdecline"
            }
          }
        }
      ]
    }
  }
}
